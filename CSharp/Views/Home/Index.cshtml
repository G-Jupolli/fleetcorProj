@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h4 style="color:purple">
        <b>Name:</b>    @ViewBag.Name <br />
        <b>Email:</b>  @ViewBag.Email <br />
        <b>Card:</b> @ViewBag.Card
    </h4>
    <hr />

    <form action="/Home/FormOne" method="post" itemid="card__form">

        <div class="form__item">
            <label for="name">Name:</label>
            <div>
                <input id="input__name" type="text" name="name" placeholder="Enter Your Name" required />
                <p class="hidden">Only include letters and spaces</p>
            </div>
        </div>

        <div class="form__item">
            <label for="email">Email:</label>
            <div>
                <input id="input__email" type="email" name="email" placeholder="Enter Your Email" required />
                <p class="hidden">Invalid email</p>
            </div>
        </div>

        <div class="form__item">
            <label for="card">Card:</label>
            <div>
                <input id="input__card" type="text" name="card" placeholder="Enter a Proxy Credit Card Number" required />
                <p class="hidden">Invalid number</p>
            </div>
        </div>

        <button type="submit">Submit</button>

    </form>
</div>
